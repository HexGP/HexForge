{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hexforge",
  "version": "0.1.0",
  "identifier": "com.hexforge.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "hexforge",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' http://127.0.0.1:8000; connect-src 'self' http://127.0.0.1:8000;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
